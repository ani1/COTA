<% content_for :header do %>
    All Quizes
<% end %>

<% @quizzes.in_groups_of(3) do |quizzes| %>
  <div class="row">
    <% quizzes.compact.each do |quiz| %>
      <div class="col s4">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <h2 class="card-title"><%= quiz.name %></h2>
            <p><%= quiz.introduction %></p>
            <p><%= "Job: #{quiz.job_title}" %></p>
            <p><%= "Time: #{quiz.time_limit}" %></p>
          </div>
          <div class="card-action">
            <a href="#">Invite Candidates</a>
            <%= link_to 'Manage Quiz', edit_quiz_path(quiz) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>


  
  
  <div class="fixed-action-btn horizontal">
    <%= link_to 'Create New Quiz', new_quiz_path, class: "btn waves-effect waves-light"%>
  </div>
</div>
