<div id="invite_candidates-form-container" class="modal modal-fixed-footer">
  <%= simple_form_for :candidate, url: candidates_send_invite_path do |f| %>
    <div class="modal-content">
      <div class="modal-header card-panel teal lighten-2">
        <h4 class="">Invite New Candidates</h4>
      </div>
      <div class="modal-body">
        <div class="input-field col s6">
          <%= f.input :name, as: :string %>
        </div>
        <div class="input-field col s6">
          <%= f.input :applied_position, as: :string, label: "Job Position" %>
        </div>
        <div class="input-field col s6">
          <%= f.input :email, as: :string %>
        </div>
        <div class="input-field col s6">
          <%= f.input :quiz_id, :as => :hidden, :input_html => { :value => "some value" } %>
        </div>
      </div>

    </div>
    <div class="modal-footer">
      <button type="button" class="close waves-effect waves-green teal btn" data-dismiss="modal" aria-hidden="true">close</button>
      <%= f.button :submit, :value => 'Send Invites', :class=>'modal-close waves-effect waves-green teal btn'%>
    </div>
  <% end %>
</div>