<% content_for :header do %>
    Sign up
<% end %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <div class="field input-field col s6">
    <i class="material-icons prefix">account_circle</i>
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first name" %>
    </div>

    <div class="field input-field col s6">
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last name" %>
    </div>
  </div>

  <div class="row">
    <div class="field input-field col s12">
    <i class="material-icons prefix">email</i>
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="row">
    <div class="field input-field col s12">
    <i class="material-icons prefix">create</i>
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "off" %>
      <% if @minimum_password_length %>
      <span class="helper-text" data-error="wrong" data-success="right">(<%= @minimum_password_length %> characters minimum)</span>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="field input-field col s12">
    <i class="material-icons prefix">create</i>
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>
  </div>

  <div class="row">
    <div class="actions">
      <%= f.submit "Sign up", :class => "waves-effect waves-light btn" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
